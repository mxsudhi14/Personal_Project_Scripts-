                             }
                              break;
                    case VK_SPACE:      //virtual keys
   write << “ ”;
break;
case VK_RETURN:
    write << “ \n”;
break;
case VK_TAB
   write<< “TAB // press tab button”;
break;
case VK_BACKSPACE:
   write << “<Backspace> ”;
break;
case VK_ESCAPE:
  write < “<Esc>”;
